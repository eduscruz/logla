<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/logla/db" VERSION="20101203" COMMENT="XMLDB file for Moodle mod/logla"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="logla" COMMENT="Default comment for logla, please edit me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="coursemodule" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course module logla activity belongs to"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="name field for moodle instances"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="General introduction of the logla activity"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Format of the intro field (MOODLE, HTML, MARKDOWN...)"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="prefeedback" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="include pre feedback"/>
        <FIELD NAME="posfeedback" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="include pos feedback"/>
        <FIELD NAME="idprefeedback" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Include id pre feedback"/>
        <FIELD NAME="idposfeedback" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Include id pos feedback"/>
        <FIELD NAME="activityquiz" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="include pre feedback"/>
        <FIELD NAME="idactivity" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="id activity"/>
        <FIELD NAME="idquiz" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="id quiz"/>
        <FIELD NAME="prefbkmaavg" TYPE="number" LENGTH="4" NOTNULL="false" SEQUENCE="false" DECIMALS="2" COMMENT="pre feedback average"/>
        <FIELD NAME="posfbkmaavg" TYPE="number" LENGTH="4" NOTNULL="false" SEQUENCE="false" DECIMALS="2" COMMENT="pos feedback average"/>
        <FIELD NAME="prefbkmbavg" TYPE="number" LENGTH="4" NOTNULL="false" SEQUENCE="false" DECIMALS="2" COMMENT="pre feedback average"/>
        <FIELD NAME="posfbkmbavg" TYPE="number" LENGTH="4" NOTNULL="false" SEQUENCE="false" DECIMALS="2" COMMENT="pos feedback average"/>
        <FIELD NAME="rightanswer" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Right Answer of activity"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="id" TYPE="primary" FIELDS="id"/>
        <KEY NAME="coursemodule" TYPE="foreign" FIELDS="coursemodule" REFTABLE="course_modules" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="logla_user_grades" COMMENT="Metacognitive user grades">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="idlogla" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="user id"/>
        <FIELD NAME="prekmagrade" TYPE="number" LENGTH="3" NOTNULL="false" DEFAULT="0" SEQUENCE="false" DECIMALS="1" COMMENT="Pre metacognition grade"/>
        <FIELD NAME="poskmagrade" TYPE="number" LENGTH="3" NOTNULL="false" DEFAULT="0" SEQUENCE="false" DECIMALS="1" COMMENT="Pos metacognition grade"/> 
        <FIELD NAME="prekmbgrade" TYPE="number" LENGTH="3" NOTNULL="false" DEFAULT="0" SEQUENCE="false" DECIMALS="1" COMMENT="Pre metacognition grade"/>
        <FIELD NAME="poskmbgrade" TYPE="number" LENGTH="3" NOTNULL="false" DEFAULT="0" SEQUENCE="false" DECIMALS="1" COMMENT="Pos metacognition grade"/> 
        <FIELD NAME="mcp1" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="Metacognition pre self-regulation"/>
        <FIELD NAME="performace1" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="Self performace"/>
        <FIELD NAME="prediction" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="Self performace"/>
        <FIELD NAME="ep1" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="Estimation pos performace"/>
        <FIELD NAME="sr1" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="Selfregulation"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="id" TYPE="primary" FIELDS="id"/>
        <KEY NAME="idlogla" TYPE="foreign" FIELDS="idlogla" REFTABLE="logla" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>